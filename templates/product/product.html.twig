{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}
<div class="container">

    {% for flashMessage in app.flashes('info') %}
        <div class="alert alert-info text-center">
            {{flashMessage}}
            <a href="{{path('app_cart')}}" class="alert-link">panier</a>
        </div>
    {% endfor %}

    {% for flashMessage in app.flashes('valided_cart') %}
        <div class="alert alert-success text-center">
            {{flashMessage}}
        </div>
    {% endfor %}

    {# ----- Search bar ----- #}
    <div class="row d-flex justify-content-center">
        <div class="col-11 col-lg-4">
            {{form_start(form)}}
                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <img src="{{asset("build/images/magnifying_glass.png")}}" alt="Icon de loupe" width="20px">
                    </span>
                    {{form_widget(form.name, {'attr': {'class': 'form-control-search'}})}}
                </div>
            {{form_end(form)}}
        </div>
    </div>

    {# ----- Product display ----- #}
    <div class="row d-flex justify-content-center">

        {% for product in products %}
            <div class="col-12 col-md-8 col-lg-4">
                <div class="card card-product my-4">
                    <div class="card-body text-center">
                        <form method="post">
                            <div class="my-3 justify-content-center">
                                <h6 class="mb-6">{{product.name}}</h6>
                                <div class="d-flex justify-content-center">
                                    <div>
                                        <input type="number" name="quantity" id="quantity" value="1" class="form-control" min="1" max="20">
                                        <input type="hidden" name="product" value="{{product.id}}">
                                        <input type="hidden" name="productName" value="{{product.name}}">
                                    </div>
                                    <div class="ms-4 p-0">
                                        <input type="submit" value="Ajouter au panier" name="add" class="btn btn btn-outline-danger me-5">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}

    </div>

</div>
{% endblock %}
